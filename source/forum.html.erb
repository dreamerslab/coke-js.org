<% content_for :head do %>
  <title>Coke - Latest</title>
  <!-- <link href='http://fonts.googleapis.com/css?family=Merriweather:400,300,700,900' rel='stylesheet' type='text/css'> -->
  <%= stylesheet_link_tag "desert" %>
  <%= stylesheet_link_tag "forum" %>
  <%= stylesheet_link_tag "bootstrap" %>
<% end %>

<div class="container">
  <div class="row">
    <div class="span9 profile">
      <form id="search" class="form-search">
        <input type="text" class="input-big search-query">
        <button type="submit" class="btn">Search</button>
      </form>
    </div>
    <div class="span3 profile">
      <a href="#" id="log-out" class="btn btn-inverse">Log out</a>
      <div id="current-user-wrap">
        <div id="profile-avatar"><img class="avatar" src="<%= lorem.image('32x32') %>" alt="Avatar"></div>
        <div id="user-notify-wrap">
          <a href="/posts/:id" id="current-user"><%= lorem.name %></a>
          <div id="notify">
            <i id="profile-comment" class="icon-exclamation-sign"></i>
            <a id="notify-link" href="/notifications">12</a>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="span9">
      <a id="new-post" class="btn btn-primary" href="/posts/new">New Post</a>
      <ul class="article-nav-list">
        <li class="article-nav-item"><a class="article-nav-link" href="#latest">Latest</a></li>
        <li class="article-nav-item"><a class="article-nav-link" href="/posts/hot">Hot</a></li>
        <li class="article-nav-item"><a class="article-nav-link" href="/posts/unsolved">Unsolved</a></li>
      </ul>
      <div class="tab-content">
        <div class="tab-pane active" id="latest">
          <% 10.times do %>
          <div class="article-item">
            <h3 class="item-title"><a class="title-link" href="#">Title</a></h3>
            <p class="item-content"><%= lorem.sentence %></p>
            <a href="/posts/tag?name=xxx" class="tag"><%= lorem.word %></a>
            <a href="/posts/tag?name=xxx" class="tag"><%= lorem.word %></a>
            <a href="/posts/tag?name=xxx" class="tag"><%= lorem.word %></a>
            <a href="/posts/:id" class="author"><%= lorem.name %></a>
            <span class="last-reply-time">49mins ago</span>
          </div> <!-- .article-item -->
          <% end %>
          <div class="pagination article-pager">
            <ul>
              <li><a href="#">Prev</a></li>
              <li class="active">
                <a href="#">1</a>
              </li>
              <li><a href="#">2</a></li>
              <li><a href="#">3</a></li>
              <li><a href="#">4</a></li>
              <li><a href="#">Next</a></li>
            </ul>
          </div>
        </div>
      </div>
    </div>
    <div class="span3">
      <ul class="thumbnails">
        <li class="span3">
          <div class="thumbnail sidebar-block">
            <div class="caption">
              <h4 class="sidebar-title">All Tags</h4>
              <p class="sidebar-content">
                <% 10.times do %>
                <a href="#" class="all-tag-item tag"><%= lorem.word %></a>
                <% end %>
              </p>
              <p class="sidebar-link-p"><a href="#" id="all-tag-link" class="btn btn-primary btn-mini">All Tags</a></p>
            </div>
          </div> <!-- .thumbnail -->
          <div class="thumbnail sidebar-block">
            <div class="caption">
              <h4 class="sidebar-title">Active Users</h4>
              <p class="sidebar-content">
                <% 10.times do %>
                <a href="#" class="user"><img class="avatar" src="<%= lorem.image('15x15') %>" alt="Avatar"><%= lorem.name %></a>
                <% end %>
              </p>
              <p class="sidebar-link-p"><a href="#" id="all-tag-link" class="btn btn-primary btn-mini">All Users</a></p>
            </div>
          </div> <!-- .thumbnail -->
          <div class="thumbnail sidebar-block">
            <div class="caption">
              <h4 class="sidebar-title">Issues</h4>
              <p class="sidebar-content">
                <% 5.times do %>
                <h4><a href="#" class="issue-title-link">Title</a></h4>
                <p><%= lorem.words 3%></p>
                <% end %>
              </p>
              <p class="sidebar-link-p"><a href="#" id="all-tag-link" class="btn btn-primary btn-mini">All Issues</a></p>
            </div>
          </div> <!-- .thumbnail -->
        </li>
      </ul>
    </div>
  </div>
</div>

<% content_for :script do %>
  <%= javascript_include_tag "bootstrap" %>
<% end %>