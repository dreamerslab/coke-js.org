<% content_for :head do %>
  <title>Coke - All Tags</title>
  <link href='http://fonts.googleapis.com/css?family=Merriweather:400,300,700,900' rel='stylesheet' type='text/css'>
  <%= stylesheet_link_tag "tags" %>
  <%= stylesheet_link_tag "bootstrap" %>
<% end %>

<div class="span12">
  <h2>All Tags</h2>
  <div id="tags-wrap">
    <ul class="thumbnails">
      <% 15.times do %>
      <li class="span3">
        <a href="/posts-tag-name.html" class="all-tag-item tag"><%= lorem.word %></a>
        <span> x 10</span>
      </li>
      <% end %>
    </ul>
  </div>
</div>

<% content_for :script do %>
  <%= javascript_include_tag "bootstrap" %>
<% end %>